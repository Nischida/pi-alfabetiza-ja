{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}
<h3>Nova turma:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/classes/add" method="POST">
            <label for="teacher">Professor:</label>
                <select class="form-select" name="teacher">
                    <option value="0">Selecione o professor responsável pela turma</option>
                    {{#each collaborators}}
                        <option value="{{_id}}">{{name}}</option>
                    {{else}}
                        <option value="0">Nenhum professor registrado</option>
                    {{/each}}
                </select>
            <label for="phase" class="mt-3">Fase:</label>
                <select class="form-select" name="phase">
                    <option selected>Selecione qual fase a turma pertence</option>
                    <option value="Pré-silábico">Pré-silábico</option>
                    <option value="Silábico">Silábico</option>
                    <option value="Silábico-alfabético">Silábico-alfabético</option>
                    <option value="Alfabético">Alfabético</option>
                </select>
            <button type="submit" class="btn btn-success mt-3">Criar turma</button>
        </form>
    </div>
</div>
