<h2>Lista de colaboradores</h2>
<hr>
<a href="/admin/collaborators/add">
    <button class="btn btn-success">Adicionar Colaborador</button>
</a>
{{#if collaborators}}
<div class="card mt-4">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                <th scope="col">Nome</th>
                <th scope="col">IDRF</th>
                <th scope="col">Função</th>
                <th scope="col">Email</th>
                <th scope="col">Data de Criação</th>
                <th scope="col">Data de Modificação</th>
                </tr>
            </thead>
            <tbody>
                {{#each collaborators}}
                    <tr>
                        <th scope="row"><a href="/admin/collaborators/edit/{{_id}}" class="link-secondary text-decoration-none">{{name}}</a></th>
                        <td>{{idrf}}</td>
                        <td>{{function}}</td>
                        <td>{{email}}</td>
                        <td>{{createdDate}}</td>
                        <td>{{lastModifiedDate}}</td>
                        <td class="align-middle">
                            <form method="POST" action="/admin/collaborators/delete">
                                <input type="hidden" name="id" value="{{_id}}">
                                <button type="submit" class="btn btn-danger">X</button>
                            </form>
                        </td>
                    </tr>
                {{else}}
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
{{else}}
<h4 class="mt-3">Nenhum colaborador cadastrado.</h4>
{{/if}}