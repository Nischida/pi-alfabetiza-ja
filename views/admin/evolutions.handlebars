<h2>Evolução do Aluno</h2>
<hr>
{{#if studenthistory}}
<div class="card mt-4">
    <div class="card-body table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                <th scope="col">EOL</th>
                <th scope="col">Nome</th>
                <th scope="col">Série</th>
                <th scope="col">Email</th>
                <th scope="col">Fase</th>
                <th scope="col">Turma</th>
                <th scope="col">Descrição</th>
                <th scope="col">Data de Modificação</th>
                </tr>
            </thead>
            <tbody>
                {{#each studenthistory}}
                    <tr>
                        <th scope="row">{{ideol}}</th>
                        <td>{{name}}</td>
                        <td>{{serie}}</td>
                        <td>{{email}}</td>
                        <td>{{phase.phase}}</td>
                        <td>{{phase.teacher.name}}</td>
                        <td>{{description}}</td>
                        <td>{{#moment lastModifiedDate}}{{/moment}}</td>
                        <td class="align-middle">
                            <form method="POST" action="/admin/classes/delete">
                                <input type="hidden" name="id" value="{{_id}}">
                                <button type="submit" class="btn btn-danger">X</button>
                            </form>
                        </td>
                    </tr>
                {{else}}
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
{{else}}
<h4 class="mt-3">Nenhuma turma registrada.</h4>
{{/if}}