<h2>Lista de Alunos</h2>
<hr>
<a href="/admin/students/add">
    <button class="btn btn-success">Adicionar Aluno</button>
</a>
{{#if students}}
<div class="card mt-4">
    <div class="card-body table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                <th scope="col">EOL</th>
                <th scope="col">Nome</th>
                <th scope="col">Série</th>
                <th scope="col">Email</th>
                <th scope="col">Fase</th>
                <th scope="col">Turma</th>
                <th scope="col">Data de Criação</th>
                <th scope="col">Data de Modificação</th>
                </tr>
            </thead>
            <tbody>
                {{#each students}}
                    <tr>
                        <th scope="row"><a href="/admin/students/edit/{{_id}}" class="link-secondary text-decoration-none">{{ideol}}</a></th>
                        <td>{{name}}</td>
                        <td>{{serie}}</td>
                        <td>{{email}}</td>
                        <td>{{phase.phase}}</td>
                        <td>{{phase.teacher.name}}</td>
                        <td>{{#moment createdDate}}{{/moment}}</td>
                        <td>{{#moment lastModifiedDate}}{{/moment}}</td>
                        <td class="align-middle">
                            <form method="POST" action="/admin/students/delete">
                                <input type="hidden" name="id" value="{{_id}}">
                                <button type="submit" class="btn btn-danger">X</button>
                            </form>
                        </td>
                    </tr>
                {{else}}
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
{{else}}
<h4 class="mt-3">Nenhum aluno registrado.</h4>
{{/if}}