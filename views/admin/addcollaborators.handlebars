{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}
<h3>Novo colaborador:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/collaborators/add" method="POST">
            <label for="name">Nome:</label>
                <input type="text" name="name" class="form-control" required>
            <label for="idrf" class="mt-3">RF:</label>
                <input type="text" name="idrf" class="form-control" required>
            <label for="function" class="me-2 mt-3">Função:</label>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="function" id="inlineRadio1" value="professor">
                <label class="form-check-label me-2" for="inlineRadio1">Professor</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="function" id="inlineRadio2" value="coordenador">
                <label class="form-check-label" for="inlineRadio2">Coordenador</label>
            </div><br>
            <label for="email" class="mt-3">Email:</label>
                <input type="text" name="email" class="form-control" required>
            <label for="password" class="mt-3">Senha:</label>
                <input type="password" name="password" class="form-control" required>
            <label for="password2" class="mt-3">Repita a sua senha:</label>
                <input type="password" name="password2" class="form-control" required>
            <button type="submit" class="btn btn-success mt-3">Criar colaborador</button>
        </form>
    </div>
</div>
